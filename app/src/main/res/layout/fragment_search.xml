<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:pile="http://schemas.android.com/apk/res-auto"
    tools:context="com.eazy.firda.eazy.SearchFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingRight="@dimen/_25sdp"
            android:background="@color/green_76AC9D">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:background="@color/white"
                android:id="@+id/laySearch">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_white_24dp"
                    android:tint="@color/grey_500"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find your car"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/grey_500"
                    android:layout_marginLeft="@dimen/_10sdp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_account_balance_wallet_white_24dp"
                    android:tint="@color/green_76AC9D"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM 1.000.000"
                        android:textSize="@dimen/_7sdp"
                        android:id="@+id/total_wallet"
                        android:textColor="@color/black_303030"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EPoint"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:textSize="@dimen/_7sdp"
                        android:textColor="@color/black_303030"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Top Up"
                    android:textColor="@color/green_76AC9D"
                    android:textSize="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/topUp"/>
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@color/grey_500"/>
            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_local_atm_black_24dp"
                    android:tint="@color/green_76AC9D"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_5sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM 1.000.000"
                        android:textSize="@dimen/_7sdp"
                        android:id="@+id/total_income"
                        android:textColor="@color/black_303030"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:textSize="@dimen/_7sdp"
                        android:textColor="@color/black_303030"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/tagMyCar"
                    android:text="List Now"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/green_76AC9D"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_500"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/layMain">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top Rated Cars"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black_303030"
                            android:id="@+id/tagRated"/>
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rvRating"
                            android:layout_below="@id/tagRated">

                        </android.support.v7.widget.RecyclerView>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_125sdp"
                            android:layout_below="@id/tagRated"
                            android:id="@+id/nullRated">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_500"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Currently No Top Rated Car"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tagFeatured"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="15dp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:text="Featured Cars"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/black_303030"
                            android:textSize="@dimen/_10sdp" />
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rvTrip"
                            android:layout_below="@id/tagFeatured">

                        </android.support.v7.widget.RecyclerView>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_125sdp"
                            android:layout_below="@id/tagFeatured"
                            android:id="@+id/nullFeatured">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_500"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Currently No Featured Car"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"/>
                        </RelativeLayout>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textAlignment="center"
                        android:background="@color/green"
                        android:paddingTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:text="Featured Promotion"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:id="@+id/ads"
                        android:textAlignment="center"
                        android:maxEms="100"
                        android:textSize="@dimen/_7sdp"
                        android:text="asdasdasadasdadadasdasdasdasdasdasdasdaasdasdasdasdasdasdasdasdasdadasdasda"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/holiday_car"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:paddingTop="10dp"
                            android:text="Share Eazy"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/tag_head"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tag_head"
                            android:id="@+id/body_1"
                            android:textColor="@color/grey600"
                            android:layout_marginTop="5dp"
                            android:text="Invite your friends"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/body_1"
                            android:id="@+id/body_2"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/grey600"
                            android:text="to Eazy and get"
                            android:visibility="gone"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/body_2"
                            android:id="@+id/body_3"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/grey600"
                            android:text="and get wallet credits for each"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/share"
                            android:background="@color/green"
                            android:textColor="@color/white"
                            android:text="Invite your friends"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
